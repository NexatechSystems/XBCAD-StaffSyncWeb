@model  IEnumerable<StaffSyncWeb.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}
 
<div class="text-center">
    <h1>Employees</h1>
</div>

<!-- "Add New" button aligned to the right -->
<div class="d-flex justify-content-end mt-3">
    <a class="btn custom-add-button" asp-action="Create" asp-controller="Employee">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

<div class="table-responsive mt-4">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Personal Email</th>
                <th>Mobile</th>
                <th>Position</th>
                <th>Access Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.employee_email</td>
                    <td>@employee.name</td>
                    <td>@employee.surname</td>
                    <td>@employee.email_personal</td>
                    <td>@employee.mobile</td>
                    <td>@employee.position</td>
                    <td>@employee.access_level</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="Employee" asp-action="Edit" asp-route-email="@employee.employee_email">Edit</a>

                        <form asp-action="Delete" asp-controller="Employee" method="post" style="display:inline;">
                            <input type="hidden" name="email" value="@employee.employee_email" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
