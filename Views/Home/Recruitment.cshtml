@model IEnumerable<StaffSyncWeb.Models.JobListing>

@{
    ViewData["Title"] = "Recruitment";
}

<div class="text-center">
    <h1>Recruitment</h1>
</div>

<!-- "New Listing" button aligned to the right -->
<div class="d-flex justify-content-end mt-3">
    <a class="btn btn-primary" asp-action="NewListing" asp-controller="Home">
        New Listing
    </a>
</div>

<!-- Job Listings Table -->
<div class="table-responsive mt-4">
    <h2>Job Listings</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Job Title</th>
                <th>Job Description</th>
                <th>Salary</th>
                <th>Benefits</th>
                <th>Status</th>
                <th>Contact Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var listing in Model)
            {
                <tr>
                    <td>@listing.listing_id</td>
                    <td>@listing.job_title</td>
                    <td>@listing.job_description</td>
                    <td>@listing.salary</td>
                    <td>@listing.benefits</td>
                    <td>@listing.status</td>
                    <td>@listing.contact_email</td>
                    <td>
                        <!-- Buttons for changing status -->
                        <form method="post" asp-action="UpdateStatus" asp-controller="Home">
                            <input type="hidden" name="id" value="@listing.listing_id" />
                            <button type="submit" name="status" value="Interviews Ongoing" class="btn btn-warning btn-sm">
                                Start Interviews
                            </button>
                            <button type="submit" name="status" value="Closed" class="btn btn-danger btn-sm">
                                Close Listing
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
