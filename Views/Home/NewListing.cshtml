@model StaffSyncWeb.Models.JobListing

@{
    ViewData["Title"] = "New Job Listing";
}

<h1>New Listing</h1>

<div class="container mt-4">
    <form asp-action="CreateListing" asp-controller="Home" method="post">
        <div class="mb-3">
            <label for="job_title" class="form-label">Job Title</label>
            <input type="text" class="form-control" id="job_title" name="job_title" required />
        </div>
        <div class="mb-3">
            <label for="job_description" class="form-label">Job Description</label>
            <textarea class="form-control" id="job_description" name="job_description" rows="3" required></textarea>
        </div>
        <div class="mb-3">
            <label for="salary" class="form-label">Salary</label>
            <input type="number" class="form-control" id="salary" name="salary" step="0.01" required />
        </div>
        <div class="mb-3">
            <label for="benefits" class="form-label">Benefits</label>
            <textarea class="form-control" id="benefits" name="benefits" rows="2" required></textarea>
        </div>
        <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <select class="form-select" id="status" name="status" required>
                <option value="Open">Open</option>
                <option value="Interviews Ongoing">Interviews Ongoing</option>
                <option value="Closed">Closed</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="contact_email" class="form-label">Contact Email</label>
            <input type="email" class="form-control" id="contact_email" name="contact_email" required />
        </div>
        <button type="submit" class="btn btn-primary">Create Listing</button>
        <a class="btn btn-secondary" asp-action="Recruitment" asp-controller="Home">Cancel</a>
    </form>
</div>
