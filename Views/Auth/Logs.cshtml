@model IEnumerable<StaffSyncWeb.Models.LogEntry>

@{
    ViewData["Title"] = "Logs";
}

<h1>Logs</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Log ID</th>
            <th>Log</th>
            <th>Date</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.log_id</td>
                <td>@log.log</td>
                <td>@log.date.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@log.employee_email</td>
            </tr>
        }
    </tbody>
</table>
